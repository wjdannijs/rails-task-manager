<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>

<ol>
<% @tasks.each do |task| %>
<li> <%= link_to task[:name], task_path(task) %> -- Deadline:  <%= task[:deadline] %> -- Done? <%= task[:status] %> <%= link_to "Edit", edit_task_path(task) %> <%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %></li>
<% end %>
</ol>

<%= link_to "Create a new task", new_task_path %>
